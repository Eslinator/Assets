{
  "$id": "rule.schema.json",
  "type": "object",
  "required": ["rule_ref","category","statement","severity","sources","version"],
  "properties": {
    "rule_ref": {"type": "string", "pattern": "^[A-Z]+(?::[A-Z0-9_-]+)+$"},
    "category": {"enum": ["performance","uv","export","roblox","material","rigging"]},
    "statement": {"type": "string"},
    "units": {"type": "string"},
    "range": {"type": "object","properties":{"min":{},"max":{}},"additionalProperties": false},
    "severity": {"enum": ["advice","warn","blocker"]},
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {"type":"object","required":["url","title"],"properties":{"url":{"type":"string"},"title":{"type":"string"}}}
    },
    "version": {"type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"}
  },
  "additionalProperties": false
}
