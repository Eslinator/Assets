{
  "$id": "procedure.schema.json",
  "type": "object",
  "required": ["id","phase","steps","metrics","DoD","sources","version"],
  "properties": {
    "id": {"type":"string"},
    "phase": {"enum":["blockout","model","uv","bake","texture","export","qa"]},
    "steps": {"type":"array","minItems":1,"items":{"type":"string"}},
    "metrics": {"type":"array","items":{"type":"object","required":["name","unit","target"]}},
    "DoD": {"type":"string"},
    "sources": {"type":"array","minItems":1,"items":{"type":"object","required":["url","title"]}},
    "version": {"type":"string","pattern":"^[0-9]+\\.[0-9]+\\.[0-9]+$"}
  },
  "additionalProperties": false
}
