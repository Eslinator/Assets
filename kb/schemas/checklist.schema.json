{
  "$id": "checklist.schema.json",
  "type": "object",
  "required": ["stage","version","items"],
  "properties": {
    "stage": {"enum":["before_export","after_import"]},
    "version": {"type":"string","pattern":"^[0-9]+\\.[0-9]+\\.[0-9]+$"},
    "items": {"type":"array","minItems":1,"items":{"type":"string"}}
  },
  "additionalProperties": false
}
